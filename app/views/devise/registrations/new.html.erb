<div class="row">
  <div class="span4">

<%= simple_form_for(resource, as: resource_name,
                    url: registration_path(resource_name),
                    html: { class: "well"}) do |f| %>
  <%= devise_error_messages! %>
        <fieldset>
          <legend>Sign Up</legend>
    <div><%= f.input :first_name %><br/></div>
    <div><%= f.input :last_name %><br/></div>
    <div><%= f.input :profile_name %><br/></div>

  <div class="field">
    <%= f.input :email, autofocus: true %><br /></div>

  <div class="field">
    <%= f.input :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <!--<%= f.password_field :password, autocomplete: "off" %>-->
  </div>

  <div class="field">
    <%= f.input :password_confirmation %><br />
    <!--<%= f.password_field :password_confirmation, autocomplete: "off" %>-->
  </div>

  <div class="actions">
    <%= f.button :submit, "Sign up" %>
  </div>
</fieldset>
<% end %>

<%= render "devise/shared/links" %>
</div>
  <div class="span8">
    <h2>Signing up is easy and secure</h2>
  </div>
</div>